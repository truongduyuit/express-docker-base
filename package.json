{
  "name": "express-docker-base",
  "version": "1.0.0",
  "description": "My base structure uses express & docker",
  "main": "index.js",
  "scripts": {
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && nodemon build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/truongduyuit/express-docker-base.git"
  },
  "keywords": [
    "base",
    "express",
    "docker"
  ],
  "author": "duycnt.uit@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/truongduyuit/express-docker-base/issues"
  },
  "homepage": "https://github.com/truongduyuit/express-docker-base#readme",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "typescript": "*"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "log4js": "^6.9.1",
    "mongoose": "^7.0.4",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.0"
  }
}
